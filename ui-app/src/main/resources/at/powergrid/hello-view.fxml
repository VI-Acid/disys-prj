<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.powergrid.HelloController"
      spacing="10">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Button text="Lade aktuelle Daten"
            onAction="#onLoadCurrentDataClick"/>

    <Button text="Lade History" onAction="#onLoadHistoryClick"/>


    <TextArea fx:id="textAreaOutput"
              prefHeight="200"
              wrapText="true"
              promptText="Antwort der REST-API erscheint hier..." />
</VBox>
